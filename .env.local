# Configurações do Banco de Dados MySQL
# Para usar um banco online gratuito, descomente uma das opções abaixo:

# Opção 1: PlanetScale (Recomendado)
# 1. Acesse: https://planetscale.com/
# 2. Crie conta gratuita
# 3. Crie um banco de dados
# 4. Copie a connection string
# DATABASE_URL=mysql://username:password@host/database?sslaccept=strict

# Opção 2: FreeMySQLHosting
# 1. Acesse: https://www.freemysqlhosting.net/
# 2. Crie conta gratuita
# DB_HOST=sql12.freemysqlhosting.net
# DB_PORT=3306
# DB_USER=seu_usuario
# DB_PASSWORD=sua_senha
# DB_NAME=seu_banco

# Configuração do banco de dados MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=omnis
DB_PASSWORD=gengar1509
DB_NAME=sistema_gestao



# Configurações de Autenticação
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your_jwt_secret



# Configurações de Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_LOGIN_MAX=20
RATE_LIMIT_LOGIN_WINDOW=60000
FEATURE_RATE_LIMITING=true

# Configurações da Empresa (para NFe)
COMPANY_CNPJ=00.000.000/0000-00
COMPANY_NAME=Sua Empresa LTDA
COMPANY_FANTASY_NAME=Sua Empresa
COMPANY_ADDRESS=Rua Exemplo, 123
COMPANY_NUMBER=123
COMPANY_DISTRICT=Centro
COMPANY_CITY=São Paulo
COMPANY_STATE=SP
COMPANY_ZIP=00000-000
COMPANY_IE=123456789

# Configurações da API de NFe
NFE_API_TOKEN=seu_token_da_api_nfe
NFE_API_URL=https://homologacao.focusnfe.com.br/v2/nfe

# Configurações do Certificado Digital
CERTIFICADO_TIPO=A1
CERTIFICADO_CAMINHO=C:\certificados\certificado.pfx
CERTIFICADO_SENHA=senha_do_certificado
CERTIFICADO_CNPJ=00000000000000
CERTIFICADO_VALIDADE=2025-12-31
CERTIFICADO_ATIVO=true

# Configurações de Impressão
PRINTER_DEFAULT_TYPE=termica
PRINTER_DEFAULT_CONNECTION=usb

# Configurações de Desenvolvimento
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
DOMAIN=localhost

# Configurações de Monitoramento
MONITORING_ENDPOINT=
MONITORING_API_KEY=