# Configurações do Banco de Dados
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=pdv_system

# Configurações de Autenticação
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Configurações da Empresa (para NFe)
COMPANY_CNPJ=00.000.000/0000-00
COMPANY_NAME=Sua Empresa LTDA
COMPANY_FANTASY_NAME=Sua Empresa
COMPANY_ADDRESS=Rua Exemplo, 123
COMPANY_NUMBER=123
COMPANY_DISTRICT=Centro
COMPANY_CITY=São Paulo
COMPANY_STATE=SP
COMPANY_ZIP=00000-000
COMPANY_IE=123456789

# Configurações da API de NFe
NFE_API_TOKEN=seu_token_da_api_nfe
NFE_API_URL=https://homologacao.focusnfe.com.br/v2/nfe

# Configurações do Certificado Digital
# Deixe em branco se não quiser configurar automaticamente
CERTIFICADO_TIPO=A1
CERTIFICADO_CAMINHO=C:\certificados\certificado.pfx
CERTIFICADO_SENHA=senha_do_certificado
CERTIFICADO_CNPJ=00000000000000
CERTIFICADO_VALIDADE=2025-12-31
CERTIFICADO_ATIVO=true

# Configurações de Impressão
PRINTER_DEFAULT_TYPE=termica
PRINTER_DEFAULT_CONNECTION=usb

# Configurações de Desenvolvimento
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEV_MODE=true
DEBUG_LEVEL=info



# Cache Settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300