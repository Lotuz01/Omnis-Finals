# Configuração de Produção - Sistema de Gestão
# Copie este arquivo para .env.production e configure os valores

# === CONFIGURAÇÕES BÁSICAS ===
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# === BANCO DE DADOS ===
DATABASE_URL=postgresql://app_user:CHANGE_PASSWORD@postgres:5432/sistema_gestao
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sistema_gestao
DB_USER=app_user
DB_PASSWORD=CHANGE_PASSWORD
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_TIMEOUT=30000

# === REDIS ===
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# === SEGURANÇA ===
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_CHAR_ENCRYPTION_KEY
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SESSION_SECRET

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# === CORS ===
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# === MONITORAMENTO ===
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_ENABLED=true
PROMETHEUS_ENABLED=true

# === EMAIL (SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Sistema de Gestão <noreply@yourdomain.com>

# === NOTIFICAÇÕES ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_URL=https://your-monitoring-service.com/webhook
ALERT_EMAIL=admin@yourdomain.com

# === BACKUP ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY

# === SSL/TLS ===
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
SSL_CA_PATH=/etc/ssl/certs/ca.pem

# === CACHE ===
CACHE_TTL=300
CACHE_MAX_SIZE=100
CACHE_ENABLED=true

# === UPLOADS ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=/app/uploads

# === API ===
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=1mb

# === PERFORMANCE ===
CLUSTER_WORKERS=0
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=60000
MAX_CONNECTIONS=1000

# === DESENVOLVIMENTO (remover em produção) ===
# DEBUG=false
# VERBOSE_LOGGING=false
# MOCK_EXTERNAL_APIS=false

# === FEATURES FLAGS ===
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_AUDIT_LOG=true
FEATURE_RATE_LIMITING=true
FEATURE_SECURITY_HEADERS=true

# === EXTERNAL SERVICES ===
# Adicione aqui configurações para serviços externos
# EXTERNAL_API_URL=https://api.external-service.com
# EXTERNAL_API_KEY=your-api-key

# === TIMEZONE ===
TZ=America/Sao_Paulo

# === HEALTHCHECK ===
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

# === GRACEFUL SHUTDOWN ===
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# IMPORTANTE:
# 1. Altere TODOS os valores marcados com CHANGE_*
# 2. Use senhas fortes e únicas
# 3. Mantenha este arquivo seguro e não o commite no git
# 4. Use um gerenciador de secrets em produção (ex: AWS Secrets Manager)
# 5. Revise regularmente as configurações de segurança