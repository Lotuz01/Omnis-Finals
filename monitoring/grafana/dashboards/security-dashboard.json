{
  "dashboard": {
    "id": null,
    "title": "Sistema de Gestão - Dashboard de Segurança",
    "tags": ["sistema-gestao", "security", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Tentativas de Login Falhadas (Últimas 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(failed_login_attempts_total[24h])",
            "legendFormat": "Falhas"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "IPs Bloqueados",
        "type": "stat",
        "targets": [
          {
            "expr": "blocked_ips_total",
            "legendFormat": "Bloqueados"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Rate Limit Ativado",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(rate_limit_triggered_total[1h])",
            "legendFormat": "Ativações"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Ataques Detectados",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(security_attacks_detected_total[24h])",
            "legendFormat": "Ataques"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Tentativas de Login por Hora",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(login_attempts_total[5m]) * 3600",
            "legendFormat": "Sucessos"
          },
          {
            "expr": "rate(failed_login_attempts_total[5m]) * 3600",
            "legendFormat": "Falhas"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "Tipos de Ataques Detectados",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(security_attacks_detected_total[5m])",
            "legendFormat": "{{attack_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "Top 10 IPs com Mais Tentativas de Login",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by(ip) (increase(failed_login_attempts_total[24h])))",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Geolocalização de Ataques",
        "type": "geomap",
        "targets": [
          {
            "expr": "sum by(country) (increase(failed_login_attempts_total[24h]))",
            "legendFormat": "{{country}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "Requisições Suspeitas por Endpoint",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m])",
            "legendFormat": "{{status}} - {{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "User Agents Suspeitos",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by(user_agent) (increase(suspicious_user_agents_total[24h])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 11,
        "title": "Logs de Segurança Críticos",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"sistema-gestao-app\"} |= \"SECURITY\" |= \"CRITICAL\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 26
        }
      },
      {
        "id": 12,
        "title": "Certificados SSL - Dias para Expirar",
        "type": "stat",
        "targets": [
          {
            "expr": "(ssl_certificate_expiry_timestamp - time()) / 86400",
            "legendFormat": "Dias"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 7
                },
                {
                  "color": "green",
                  "value": 30
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 34
        }
      },
      {
        "id": 13,
        "title": "Sessões Ativas",
        "type": "stat",
        "targets": [
          {
            "expr": "active_sessions_total",
            "legendFormat": "Sessões"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 34
        }
      },
      {
        "id": 14,
        "title": "Tempo Médio de Sessão",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(session_duration_seconds)",
            "legendFormat": "Duração"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 34
        }
      },
      {
        "id": 15,
        "title": "Backup Status",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - last_backup_timestamp",
            "legendFormat": "Último Backup"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 86400
                },
                {
                  "color": "red",
                  "value": 172800
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 34
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "time_range",
          "type": "interval",
          "query": "1h,6h,12h,24h,7d",
          "current": {
            "text": "24h",
            "value": "24h"
          }
        },
        {
          "name": "attack_type",
          "type": "query",
          "query": "label_values(security_attacks_detected_total, attack_type)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Incidents",
          "datasource": "Prometheus",
          "expr": "increase(security_attacks_detected_total[1m]) > 0",
          "titleFormat": "Security Alert",
          "textFormat": "{{attack_type}} attack detected from {{ip}}",
          "iconColor": "red"
        }
      ]
    },
    "links": [
      {
        "title": "Dashboard Principal",
        "url": "/d/sistema-gestao-dashboard",
        "type": "dashboards"
      },
      {
        "title": "Alertas",
        "url": "http://alertmanager:9093",
        "type": "link"
      }
    ]
  },
  "overwrite": true
}